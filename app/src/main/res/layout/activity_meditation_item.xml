<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/meditation_card"
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardview_radius"
        app:cardElevation="@dimen/cardview_default_elevation">

        <RelativeLayout
            android:id="@+id/meditation_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/meditation_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/meditation_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_action_add"
                android:drawableEnd="@drawable/ic_action_add" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/meditation_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/meditation_card"
        android:layout_margin="@dimen/normal_margin"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/blue_grey_500"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/meditation_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/meditation_card_title"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/blue_grey_500" />
</RelativeLayout>