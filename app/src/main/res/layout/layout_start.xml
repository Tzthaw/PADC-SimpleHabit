<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/start_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/biggest_margin"
        android:textColor="@color/blue_grey_500"
        android:textSize="@dimen/text_big"
        android:textStyle="bold" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        android:elevation="@dimen/cardview_elavation"
        android:layout_margin="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/start_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/current_background" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/start_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:drawableRight="@drawable/ic_action_add"
                    android:drawableEnd="@drawable/ic_action_add" />

                <TextView
                    android:id="@+id/start_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_big" />

                <Button
                    android:id="@+id/start_btn"
                    style="@style/PrimaryButton"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/tab_padding_bottom"
                    android:background="@drawable/rounded_button"
                    android:drawableLeft="@drawable/ic_action_add"
                    android:drawablePadding="@dimen/normal_margin"
                    android:gravity="center"
                    android:paddingLeft="@dimen/biggest_margin"
                    android:paddingRight="@dimen/biggest_margin"
                    android:text="@string/start"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_medium"
                    android:drawableStart="@drawable/ic_action_add" />

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="@dimen/text_regular_margin"
                    android:layout_marginTop="@dimen/marginTop_big"
                    android:gravity="end"
                    android:text="@string/time_start"
                    android:textColor="@color/blue_grey_50"
                    android:textSize="@dimen/tab_label"
                    android:layout_marginEnd="8dp" />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>